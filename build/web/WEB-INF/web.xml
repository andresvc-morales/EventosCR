<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>EventosCR</display-name>

    <!-- TODOS LOS SERVLETS -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.ReservaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/ReservaServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmarReservaServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.ConfirmarReservaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmarReservaServlet</servlet-name>
        <url-pattern>/ConfirmarReservaServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EliminarReservaServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.EliminarReservaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarReservaServlet</servlet-name>
        <url-pattern>/EliminarReservaServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!-- ADMIN SERVLET - EL QUE TE FALTABA -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.miempresa.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>